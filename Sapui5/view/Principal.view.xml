<mvc:View
   controllerName="estagio.controller.Principal"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc">
   <Panel
      headerText="{i18n>PanelTitle}"
      class="sapUiResponsiveMargin"
      width="auto" >
      <content>
         <Button
            id="Tcontatos"
            text="{i18n>TContatos}"
            press=".onPressContatos"
            class="sapUiSmallMarginEnd"
            />
         <Button
            id="AdicionarC"
            text="{i18n>AContato}"
            press=".onPressAdicionar"
            class="sapUiSmallMarginEnd"
            />
      </content>
   </Panel>
</mvc:View>